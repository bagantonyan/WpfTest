<UserControl x:Class="WpfTest.UI.Views.ShopManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTest.UI.Views"
             mc:Ignorable="d" 
             xmlns:storeTabData="clr-namespace:WpfTest.UI.Views.StoreViews"
             xmlns:customerTabData="clr-namespace:WpfTest.UI.Views.CustomerViews"
             xmlns:personTabData="clr-namespace:WpfTest.UI.Views.PersonViews"
             d:DesignHeight="400" d:DesignWidth="500">
    <Grid>
        <TabControl Grid.Row="0">
                <storeTabData:StoresTabView />
            <customerTabData:CustomersTabView />
            <personTabData:PersonsTabView />
        </TabControl>
    </Grid>
</UserControl>
